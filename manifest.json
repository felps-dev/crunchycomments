{
    "name": "Crynchycomments",
    "description": "A simple disqus wrapper for crunchyroll",
    "version": "0.6",
    "manifest_version": 3,
    "action": {
        "default_popup": "clown.html",
        "default_icon": "clown.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/comments.js",
                "scripts/disqus_embed.js"
            ],
            "matches": [
                "https://www.crunchyroll.com/*"
            ],
            "world": "MAIN"
        }
    ]
}